fstbinaries/Verb.fst fstbinaries/VerbGuessing.fst \
fstbinaries/Numeral.fst fstbinaries/Number.fst \
fstbinaries/OrthoRule.fst \
fstbinaries/Capitalization.fst \
particles/conj.lexc \
